<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/week_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="금주의 기획전"
        android:textSize="25sp"
        android:layout_marginTop="20sp"
        app:layout_constraintBottom_toTopOf="@+id/event_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/event_before_narrow"
        android:layout_width="35sp"
        android:layout_height="200sp"
        android:layout_marginTop="5sp"
        app:layout_constraintTop_toBottomOf="@+id/week_event"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_navigate_before_gray_24dp" />

    <ImageView
        android:id="@+id/event_next_narrow"
        android:layout_width="35sp"
        android:layout_height="200sp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_navigate_next_gray_24dp"
        app:layout_constraintTop_toBottomOf="@+id/week_event"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5sp"
        android:src="@drawable/event1"
        app:layout_constraintEnd_toStartOf="@+id/event_next_narrow"
        app:layout_constraintLeft_toLeftOf="@+id/event_before_narrow"
        app:layout_constraintStart_toEndOf="@+id/event_before_narrow"
        app:layout_constraintRight_toRightOf="@id/event_next_narrow"
        app:layout_constraintTop_toBottomOf="@+id/week_event" />

</android.support.constraint.ConstraintLayout>